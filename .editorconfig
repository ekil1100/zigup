root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.zig]
indent_size = 4

[*.zon]
indent_size = 4

[*.sh]
indent_style = tab
tab_width = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[prompt.txt]
indent_size = 2
trim_trailing_whitespace = false
